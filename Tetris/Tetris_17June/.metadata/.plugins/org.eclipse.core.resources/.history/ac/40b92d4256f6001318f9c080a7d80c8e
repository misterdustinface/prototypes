package devan.utilities;

import java.util.ArrayList;
import java.util.Random;

public final class Shuffler {
	private Shuffler(){}
	
	private static Random rand = new Random();
	
	@SuppressWarnings("rawtypes")
	public static ArrayList<?> shuffleArrayList(ArrayList<?> list, Class c) throws InstantiationException, IllegalAccessException{
		Object temp;
		int tempIndex;
		for(int i = 0; i < list.size(); ++i){
			tempIndex = rand.nextInt(list.size());
			temp = list.get(tempIndex);
			list.set(tempIndex, list.get(i));
			list.set(i, temp);
		}
		return list;
	}
	
}
